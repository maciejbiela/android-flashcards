<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.GuessFragment">

    <Spinner
        android:id="@id/sp_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_mother_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_find_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find out!" />

    <TextView
        android:id="@+id/tv_foreign_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_knew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Knew!"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bt_did_not_know"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Didn't know!"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
